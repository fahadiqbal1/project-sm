<% if admin_signed_in? %>
    <table class="table table-hover table-bordered table-responsive">
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Sequence</th>
            <th>Status</th>
            <th># of Subjects</th>
            <th></th>
        </tr>
        <% @course.order(:sequential_id).each do |c| %>
            <tr>
                <td><%= link_to c.name, c %></td>
                <td><%= c.description %></td>
                <td><%= c.sequential_id %></td>
                <td><%= c.status.capitalize %></td>
                <td><%= c.subjects.count %></td>
                <td>
                    <%= link_to "Edit", edit_course_path(c),
                        :class => "btn btn-sm btn-primary" %>
                    <%= link_to "Remove", c, method: :delete,
                        data: { confirm: "Are you sure?" },
                        :disabled => !current_admin.admin?,
                        :class => "btn btn-sm btn-danger" %>
                </td>
            </tr>
        <% end %>
    </table>
<% else %>
    <div class="card-columns">
        <% @course.order(:sequential_id).each do |c| %>
            <div class="card">
                <div class="card-block">
                    <h4 class="card-title"><%= link_to c.name, c %></h4>
                    <p class="card-text"><%= c.description %></p>
                </div>
            </div>
        <% end %>
    </div>
<% end %>
