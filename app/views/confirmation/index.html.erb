<% provide(:title, t('.title') ) %>

<div class="form col-md-6 offset-md-3">
  <%= form_for(@user, as: 'confirmation', url: confirmation_index_path(@user)) do |f| %>
    <div class="form-group row">
      <%= f.label :phone_number, :class => 'col-sm-3 col-form-label' %>
      <div class="col-sm-9"><%= f.text_field :phone_number, :autofocus => true, :class => 'form-control' %></div>
      <%= f.hidden_field :phone_dial_code %>
    </div>
    
    <div class="form-group row">
      <%= f.label :otp, :class => 'col-sm-3 col-form-label' %>
      <div class="col-sm-9">
        <%= f.text_field :otp, :required => true, :class => 'form-control' %>
      </div>
    </div>
  
    <div class="actions">
      <%= f.submit :class => 'btn btn-primary btn-block'  %>
    </div>
  <% end %>
</div>
