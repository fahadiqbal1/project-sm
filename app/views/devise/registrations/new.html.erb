<% provide(:title, "Sign Up") %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group row">
    <%= f.label :phone_number, :class => 'col-sm-2 col-form-label' %>
    <div class="col-sm-10"><%= f.text_field :phone_number, :autofocus => true, :class => 'form-control' %></div>
    <%= f.hidden_field :phone_dial_code %>
  </div>
  
  <div class="form-group row">
    <%= f.label :email, :class => 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= f.email_field :email, :required => false, :class => 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :password, :class => 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= f.password_field :password, autocomplete: "off", :class => 'form-control' %>
      <% if @minimum_password_length %>
        <p class="form-text text-muted">(<%= @minimum_password_length %> characters minimum)</p>
      <% end %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :password_confirmation, :class => 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= f.password_field :password_confirmation, autocomplete: "off", :class => 'form-control' %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", :class => 'btn btn-primary'  %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
