<% provide(:title, t('.title') ) %>

<div class="form col-md-6 offset-md-3">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group row">
      <%= f.label :phone_number, :class => 'col-sm-3 col-form-label' %>
      <div class="col-sm-9"><%= f.text_field :phone_number, :autofocus => true, :class => 'form-control' %></div>
      <%= f.hidden_field :phone_dial_code %>
    </div>
  
    <div class="form-group row">
      <%= f.label :password, :class => 'col-sm-3 col-form-label' %>
      <div class="col-sm-9">
        <%= f.password_field :password, autocomplete: "off", :class => 'form-control' %>
      </div>
    </div>
  
    <% if devise_mapping.rememberable? -%>
      <div class="checkbox col-sm-9 offset-sm-1">
        <%= f.check_box :remember_me, :class => "form-check-input" %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>
  
    <div class="actions">
      <%= f.submit :class => 'btn btn-primary btn-block' %>
    </div>
  <% end %>
</div>
  

<%# render "devise/shared/links" %>
