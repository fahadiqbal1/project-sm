        <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
        <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
        <%= yield(:head) %>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <%# Specifies the default name of home screen bookmark in iOS 6+ %>
        <meta name="apple-mobile-web-app-title" content="Soul Medicine">
        
        <%= csrf_meta_tags %>
        
        <title>
            <%= strip_tags(yield(:title)) + " â€“ " if content_for?(:title) %> <%= t('navbar.brand') %>
        </title>
    </head>
    <body class="<%= controller_name %> <%= action_name %> <%= locale %>">
        
        <%= yield %>
        
        <%= yield :javascript %>
    
    </body>
</html>